<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <script
      src="https://use.fontawesome.com/releases/v5.15.3/js/all.js"
      data-auto-a11y="true"
    ></script>
    <title>My Resources</title>
  </head>

  <body>
    <!-- header -->
    <%- include('partials/_nav') %>
    <main>
      <div class="myresource-container">
        <div class="header-banner">
          <h1>my resources</h1>
          <div class="btn-container">
            <button class="create-new" type="button">create new</button>
            <button class="edit-btn" type="button">edit</button>
          </div>
        </div>
        <div class="resources">
          <div class="card">
            <div class="title">
              <h3>Preact</h3>
              <p>posted by: username</p>
            </div>
            <div class="main">
              <div>
                <p>
                  <a href="https://preactjs.com/"
                    ><i class="fas fa-link"></i
                  ></a>
                </p>
              </div>
              <div class="iframe-container">
                <iframe
                  src="https://preactjs.com/"
                  title="preact"
                  frameborder="0"
                  scrolling="no"
                >
                </iframe>
              </div>
              <div class="description">
                <p class="teaser">
                  Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed
                  do eiusmod tempor incididunt ut labore et dolore magna aliqua
                  ipsum dolor elit...
                </p>
                <button class="full">full article</button>
              </div>
            </div>
            <div class="footer">
              <p class="badges">
                <span class="badge php">Python</span>
                <span class="badge js">JS</span>
                <span class="badge wordpress">wordPress</span>
              </p>
              <!-- <p class="icons">
                <a href="/"><i class="fas fa-comment-dots"></i><sup>5</sup></a>
                <a href="/"><i class="fas fa-heart"></i><sup>9</sup></a>
              </p> -->
            </div>
          </div>
        </div>
      </div>
    </main>
    <!-- footer -->
    <%- include('partials/_footer') %>

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </body>
</html>
